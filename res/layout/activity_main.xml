<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/bttoast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="32dp"
        android:text="Toast" />

    <Button
        android:id="@+id/bttela2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttoast"
        android:layout_below="@+id/bttoast"
        android:layout_marginTop="50dp"
        android:text="Tela2 " />

    <Button
        android:id="@+id/bttela3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/bttela2"
        android:layout_centerVertical="true"
        android:text="Tela3" />

    <Button
        android:id="@+id/btcadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bttela3"
        android:layout_below="@+id/bttela3"
        android:layout_marginTop="38dp"
        android:text="Cadastro" />

</RelativeLayout>